generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// model => tabela
// @default => padr√£o do campo anterior @id 
model Habit {
  id         String   @id @default(uuid())
  title      String
  created_at DateTime

  @@map("habits") // nome da tabela no banco
}
